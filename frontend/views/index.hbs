<header class="d-flex justify-content-between align-items-center">
  <h1>BevStar</h1>
  <a href="/drinks/new" class="btn btn-primary">New Drinks</a>
</header>
<ul class="list-group">
  {{#each drinks}}
    <li class="list-group-item d-flex justify-content-between">
      <div>{{this.drinkName}}</div>
      <div class="links">
        <a href="/drinks/{{this.id}}" class="btn btn-info">View</a>
        <!--insert this anchor tag into the div with a class of 'links'-->
        <a href="/drinks/{{this.id}}/edit" class="btn btn-primary">Edit</a>
        <!--insert this anchor tag into the div with a class of 'links'-->
        <form
          action="/drinks/{{this.id}}?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
      </div>
    </li>
  {{/each}}
</ul>